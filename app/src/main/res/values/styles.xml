<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="nav_bar_text" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="course_title" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textColor">@color/orange_sign</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="floating_button" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:src">@drawable/ic_add_circle_fab</item>
        <item name="android:tint">@color/orange_sign</item>
        <item name="android:backgroundTint">@android:color/black</item>
    </style>

</resources>
